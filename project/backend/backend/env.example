# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/ucost_db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Admin Default Credentials
ADMIN_EMAIL=admin@ucost.com
ADMIN_PASSWORD=admin123

# CORS Configuration
CORS_ORIGIN=http://localhost:8080 

# OCR Configuration (portable)
# Relative path from repo root or absolute path to Python OCR script
OCR_SCRIPT_PATH=project/ocr-engine/simple_ocr.py
# Optional: custom Python interpreter (e.g., path to venv python)
# On Windows, example: C:\\Path\\to\\repo\\project\\ocr-engine\\.venv\\Scripts\\python.exe
# On macOS/Linux, example: /path/to/repo/project/ocr-engine/.venv/bin/python
OCR_PYTHON_BIN=
# Optional: timeout in milliseconds for OCR processing
OCR_TIMEOUT_MS=45000